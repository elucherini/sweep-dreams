{
  "name": "sweep-dreams-workers",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --persist-to .wrangler/state --ip 0.0.0.0",
    "dev:notify": "wrangler dev -c notify/wrangler.toml --persist-to .wrangler/state --ip 0.0.0.0",
    "deploy": "wrangler deploy",
    "deploy:notify": "wrangler deploy -c notify/wrangler.toml",
    "test": "vitest",
    "test:shared": "vitest run --dir shared",
    "test:api": "npm run test:shared && vitest run --dir src",
    "test:notify": "npm run test:shared && vitest run --dir notify/src",
    "type-check": "tsc --noEmit",
    "type-check:api": "tsc --noEmit -p tsconfig.api.json",
    "type-check:notify": "tsc --noEmit -p tsconfig.notify.json",
    "ip": "./get-local-ip.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Cloudflare Workers API for Sweep Dreams",
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "hono": "^4.11.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251216.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.47.0"
  }
}
